{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">

                    {% if hasError %}
                        <div class="alert alert-danger">Une erreur est survenue, le nom d'utilisateur ou alors le mot de passe est invalide</div>
                    {% endif %}

                    <div class="register-forms" style="height: 450px; margin-bottom: 50px">

                        <form id="sign-in" name="sign-in" action="{{ path('account_login') }}" method="post">
                            <h1  style="margin-top: 20px" class="register-form-title">Connexion</h1>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email..." required value="{{ username }}">
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" name="_password" id="password" placeholder="Mot de passe..." class="form-control" required>
                            </div>
                            <div class="register-form-submit">
                                {# TODO ROOT LOGIN#}
                                <button style="margin-top: 10px" class="btn btn-theme btn-small" type="submit">Connexion</button>
                            </div>
                            <div class="register-footer">
                                Vous n'avez pas de compte ?<br>s'incrire comme
                                <a href="{{ path('account_register') }}" id="btn-show-sign-up">producteur</a>
                                ou
                                <a href="{{ path('account_consumer_register') }}" id="btn-show-sign-up">utilisateur</a>
                            </div>

                            {#<div style="left: 30px; border-top: 1px solid #E6E6E6; text-align: center; color: #95989A; line-height: 45px;">#}
                            {#Vous n'avez pas de compte ?#}
                            {#<a href="{{ path('account_register') }}" id="btn-show-sign-up">S' inscrire</a>#}
                            {#</div>#}
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>


{% endblock %}
