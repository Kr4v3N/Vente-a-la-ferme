{% extends 'base.html.twig' %}

{% block navbar %}
    {% include 'consumer/navbar.html.twig' %}
{% endblock %}

{% block content %}

    <div class="container bootstrap snippet section">
        <div class="row">
            {{ form_start(formConsumerProfil) }}
            <div class="col-sm-3"><!--left col-->

                <div class="text-center">
                    {% if consumer.profilPicture is null %}
                        <img src="/assets/images/avatar2.png" class="avatar img-circle img-thumbnail" alt="avatar">
                    {% else %}
                        <img src="/uploads/{{ consumer.profilPicture }}" class="avatar img-circle img-thumbnail" alt="avatar">
                    {% endif %}
                    <h6>Télécharger une photo...</h6>
                    {{ form_label(formConsumerProfil.profilPicture) }}
                    {{ form_widget(formConsumerProfil.profilPicture) }}
                    {{ form_errors(formConsumerProfil.profilPicture) }}
                </div></hr><br>

            </div><!--/col-3-->
            <div class="col-sm-9">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#home">Mes informations</a></li>
                    {#<li><a data-toggle="tab" href="#messages">Ma ferme</a></li>#}
                </ul>

                <h3>Modifier mes informations</h3>
                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <hr>
                        <form class="form" action="#" method="post" id="registrationForm">
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="first_name"><h4>Pseudo</h4></label>
                                    {{ form_widget(formConsumerProfil.userName) }}
                                    {{ form_errors(formConsumerProfil.userName) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="first_name"><h4>Prénom</h4></label>
                                    {{ form_widget(formConsumerProfil.User.firstName) }}
                                    {{ form_errors(formConsumerProfil.User.firstName) }}
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="last_name"><h4>Nom</h4></label>
                                    {{ form_widget(formConsumerProfil.User.lastName) }}
                                    {{ form_errors(formConsumerProfil.User.lastName) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="description"><h4>Description</h4></label>
                                    {{ form_widget(formConsumerProfil.description) }}
                                    {{ form_errors(formConsumerProfil.description) }}
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="email"><h4>Email</h4></label>
                                    {{ form_widget(formConsumerProfil.User.email) }}
                                    {{ form_errors(formConsumerProfil.User.email) }}
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="address"><h4>Adresse</h4></label>
                                    {{ form_widget(formConsumerProfil.address) }}
                                    {{ form_errors(formConsumerProfil.address) }}
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="postalcode"><h4>Code postal</h4></label>
                                    {{ form_widget(formConsumerProfil.postalCode) }}
                                    {{ form_errors(formConsumerProfil.postalCode) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="city"><h4>Ville</h4></label>
                                    {{ form_widget(formConsumerProfil.city) }}
                                    {{ form_errors(formConsumerProfil.city) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-6">
                                    <a class="forgot-password" href="{{ path('password_update') }}">modifier votre mot de passe</a>
                                </div>
                            </div>

                            {{ form_rest(formConsumerProfil) }}

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <br>
                                    <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                    <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                                </div>
                            </div>
                        </form>

                        <hr>
                    </div>

                </div><!--/tab-pane-->
            </div><!--/tab-content-->
            {{ form_end(formConsumerProfil) }}

        </div><!--/col-9-->
    </div><!--/row-->

{% endblock %}