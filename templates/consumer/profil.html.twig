{% extends 'base.html.twig' %}

{% block navbar %}
    {% include 'consumer/navbar.html.twig' %}
{% endblock %}

{% block content %}

    <!--About consumer Start-->
    <section class="section" id="about" >
        <div class="container">
            <div class="row">
                <!-- about consumer content -->
                <div class="col-md-9 col-sm-12">
                    <div class="section-title left">
                        <span>{{ consumer.userName }}</span>
                        <h1>Bonjour {{ consumer.user.firstName }} {{ consumer.user.lastName }}</h1>
                    </div>
                    <div class="about-contant">
                        <p>{{ consumer.description }}</p>
                        <a class="btn btn-theme margin-t-10" href="{{ path('consumer_profil_form') }}">Modifier mes informations <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!-- end about consumer content -->

                <!-- about right image -->
                <div class="col-md-3 col-sm-12 ">
                    <div class="text-center">
                        {% if consumer.profilPicture is null %}
                            <img src="/assets/images/avatar2.png" class="avatar img-circle img-thumbnail" alt="avatar">
                        {% else %}
                            <img src="/uploads/{{ consumer.profilPicture }}" class="avatar img-circle img-thumbnail " alt="avatar">
                        {% endif %}
                    </div></hr><br>
                </div>
                <!-- about right image -->
            </div>
        </div>
    </section>

    <!--About End-->

    <!--funfacts Start-->
    <section class="counter" id="fun-facts">
        <div class="container">
            <div class="row">

                <!-- factbox -->
                <div class="col-md-3 col-sm-12">
                    <div class="counter-inner">
                        <i class="fas fa-apple-alt"></i>
                        <h4 class="count-number">{{ consumer.farmers | length }}</h4>Nombre de fermes suivis
                    </div>
                </div>
                <!-- end factbox -->

                <!-- factbox -->
                <div class="col-md-3 col-sm-12">
                    <div class="counter-inner">
                        <i class="fas fa-book"></i>
                        <h4 class="count-number">0</h4>Recettes conseill√©es
                    </div>
                </div>
                <!-- end factbox -->

                <!-- factbox -->
                <div class="col-md-3 col-sm-12">
                    <div class="counter-inner">
                        <i class="icofont icofont-social-instagram"></i>
                        <h4 class="count-number">0</h4>Total Followers
                    </div>
                </div>
                <!-- end factbox -->

                <!-- factbox -->
                <div class="col-md-3 col-sm-12">
                    <div class="counter-inner last">
                        <i class="fas fa-eye"></i>
                        <h4 class="count-number">0</h4>Vue de votre profil
                    </div>
                </div>
                <!-- end factbox -->

            </div>
        </div>
    </section>
    <!--funfacts End-->
    <!-- end feature section -->

{% endblock %}
