<div class="demos">
    <div class="demos-inner">

        <a href="#" id="demos-toggle" class="theme-setting event">
            <i class="fas fa-star"></i>
        </a>

        <div class="demo-header">
            <span style="font-size: 188%; color: #2C2B41;">
            <i class="fas fa-star"></i>
            </span>
        </div>

        {% if app.user and is_granted('ROLE_CONSUMER') %}
        <div class="demo-pages">
            <h4 class="text-center">Mes Fermes favorites !</h4>


            {% if followedFarmers is defined %}

            <p class="text-center margin-b-30">Accéder a vos fermes favorites!</p>

            {% for followedFarmer in followedFarmers %}

                <a href="{{ path('farm_show', {id: followedFarmer.id, slug: followedFarmer.slug}) }}" class="featured-data">
                    <div class="page-footer">
                        {{ followedFarmer.farmName }}
                    </div>
                    {% if followedFarmer.photoFarm is null %}
                        <img src="/assets/images/farm.jpg" class=" text-center" alt="photo farm" style="width: 100%; height: 125px">
                    {% else %}
                    <img src="/uploads/{{ followedFarmer.photoFarm }}" class=" text-center" alt="photo farm" style="width: 100%; height: 125px">
                    {% endif %}
                </a>
            {% endfor %}
        </div>

        {% endif %}

        {% else %}

        <div class="col col-md-12">
            <div class="box-contant section-title text-center ">

                <h4 class="text-center" >Mes Fermes favorites !</h4>

                <p class="text-center margin-b-30">Pour pouvoir ajouter des fermes ou accéder à vos favoris , veuillez-vous connecter !</p>


                <form action="{{ path('account_login') }}">
                    <button type="submit" class="btn btn-theme margin-t-10" onclick="window.location.href{{ path('account_login') }}">Commencer</button>
                </form>
            </div>
        </div>
{% endif %}