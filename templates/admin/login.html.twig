{% extends 'adminLayout.html.twig' %}

{% block body %}
    <div class="w3-row">
        <div class="w3-col m2 l3"><p></p>

        </div>
        <div class="w3-col s12 m8 l6">
            <div class="w3-center"><br>
                <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-xlarge w3-transparent w3-display-topright" title="Close Modal">×</span>
                <img src="/assets/images/img_avatar4.png" alt="Avatar" style="width:30%" class="w3-circle w3-margin-top">
            </div>
            <form class="w3-container" action="{{ path('admin_login') }}" method="post">
                <div class="w3-section">
                    <label><b>Email</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="exemple@exemple.com" name="_username" required value="{{ username }}">
                    <label><b>Mot de passe</b></label>
                    <input class="w3-input w3-border" type="password" placeholder="mot de passe" name="_password" required>
                    <button class="w3-button w3-block w3-section w3-padding green" type="submit">Connexion</button>

                </div>
            </form>

            <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
                <span class="w3-right w3-padding w3-hide-small"><a href="#"> mot de passe oublié ?</a></span>
            </div>
        </div>
    </div>


{% endblock %}